<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="20dp"
            app:cardBackgroundColor="@color/colorPrimary"
            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="3dp"
            card_view:contentPadding="4dp"
            android:foreground="?selectableItemBackground">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/weekday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mo"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="29.07."
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:layout_marginRight="80dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:id="@+id/categoryOfDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Training"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/card_begin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Beginn"
                    android:textSize="16sp"
                    android:textColor="@color/colorWhite"
                    android:layout_marginRight="91dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="60dp"/>

                <TextView
                    android:id="@+id/card_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ende"
                    android:textSize="16sp"
                    android:textColor="@color/colorWhite"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="60dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/card_begin_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20:00"
                    android:textSize="16sp"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:layout_marginRight="90dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="80dp"/>

                <TextView
                    android:id="@+id/card_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21:45"
                    android:textSize="16sp"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="80dp"/>
            </LinearLayout>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp"
                android:layout_gravity="center">

                <RadioButton
                    android:id="@+id/radioButton_check"
                    android:button="@drawable/ic_checked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="80dp"
                    android:layout_marginTop="100dp"
                    android:text="13"
                    android:textColor="@color/colorWhite"/>

                <RadioButton
                    android:id="@+id/radioButton_unsure"
                    android:button="@drawable/ic_question_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:layout_marginRight="78dp"
                    android:text="01"
                    android:textColor="@color/colorWhite"/>

                <RadioButton
                    android:id="@+id/radioButton_notAttend"
                    android:button="@drawable/ic_cancel_music"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:text="03"
                    android:textColor="@color/colorWhite"/>
            </RadioGroup>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>